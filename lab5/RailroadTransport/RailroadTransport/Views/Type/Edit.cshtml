@model RailroadTransport.Models.Type

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактировать</h2>
<form action="edit" method="post">
    <input type="hidden" asp-for="TypeId" />
    <div class="form-group">
        <label asp-for="NameOfType" class="control-label"></label>
        <input asp-for="NameOfType" class="form-control" name="NameOfType" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
    </div>
</form>