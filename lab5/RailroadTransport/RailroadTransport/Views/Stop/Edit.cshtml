@model RailroadTransport.Models.Stop

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактировать</h2>
<form action="edit" method="post">
    <input type="hidden" asp-for="StopId" />
    <div class="form-group">
        <label asp-for="NameOfStop" class="control-label"></label>
        <input asp-for="NameOfStop" class="form-control" name="NameOfStop" />
    </div>
    <div class="form-group">
        <label asp-for="IsStation" class="control-label"></label>
        <select asp-for="IsStation" class="form-control">
            <option disabled>Является ли станцией</option>
            <option value="True">True</option>
            <option value="False">False</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IsHall" class="control-label"></label>
        <select asp-for="IsHall" class="form-control">
            <option disabled>Имеется ли зал ожидания</option>
            <option value="True">True</option>
            <option value="False">False</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
    </div>
</form>