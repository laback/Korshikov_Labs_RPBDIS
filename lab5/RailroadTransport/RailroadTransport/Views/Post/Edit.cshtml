@model RailroadTransport.Models.Post

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h2>Редактировать</h2>
<form action="edit" method="post">
    <input type="hidden" asp-for="PostId" />
    <div class="form-group">
        <label asp-for="NameOfPost" class="control-label"></label>
        <input asp-for="NameOfPost" class="form-control" name="NameOfPost" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
    </div>
</form>