@model RailroadTransport.Models.Train

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактировать</h2>
<form action="edit" method="post">
    <input type="hidden" asp-for="TrainId" />
    <div class="form-group">
        <label asp-for="TypeId" class="control-label"></label>
        <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
    </div>
    <div class="form-group">
        <label asp-for="IsFirm" class="control-label"></label>
        <select asp-for="IsFirm" class="form-control">
            <option disabled>Выберите является ли поезд фирменным</option>
            <option value="True">True</option>
            <option value="False">False</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-outline-dark" />
    </div>
</form>